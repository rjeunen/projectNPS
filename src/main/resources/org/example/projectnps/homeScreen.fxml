<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="homeScreenPane" prefHeight="665.0" prefWidth="820.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projectnps.HomescreenController">
   <children>
      <AnchorPane fx:id="creditsPane" prefHeight="40.0" prefWidth="820.0">
         <children>
            <HBox prefHeight="40.0" prefWidth="820.0">
               <children>
                  <Label fx:id="titleLabel" prefHeight="40.0" prefWidth="410.0" text="ProjectNPS">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font></Label>
                  <Label fx:id="creditsLabel" prefHeight="40.0" prefWidth="410.0" text="Credits: Created by Robby Jeunen" />
               </children></HBox>
         </children></AnchorPane>
      <AnchorPane fx:id="navigationPane" layoutY="40.0" prefHeight="625.0" prefWidth="160.0">
         <children>
            <VBox fx:id="containerVbox" layoutY="222.0" prefHeight="403.0" prefWidth="160.0">
               <children>
                  <Button fx:id="importButton" mnemonicParsing="false" onAction="#getData" prefHeight="25.0" prefWidth="100.0" text="Import" />
                  <Button fx:id="exportButton" mnemonicParsing="false" onAction="#exportData" prefHeight="25.0" prefWidth="100.0" text="Export" />
                  <Button fx:id="addRecordButton" mnemonicParsing="false" onAction="#addRecord" prefHeight="25.0" prefWidth="100.0" text="Add Record" />
                  <Button fx:id="deleteRecordButton" mnemonicParsing="false" onAction="#deleteRecord" prefHeight="25.0" prefWidth="100.0" text="Delete Record" />
                  <Button fx:id="helpButton" mnemonicParsing="false" onAction="#openHelpButton" prefHeight="25.0" prefWidth="100.0" text="Help" />
                  <Button fx:id="closeHelpButton" onAction="#closeHelp" prefHeight="25.0" prefWidth="100.0" text="Exit help" visible="false" />
               </children>
            </VBox>
         </children></AnchorPane>
      <AnchorPane layoutX="160.0" layoutY="40.0" prefHeight="625.0" prefWidth="660.0">
         <children>
            <TableView fx:id="contentTableView" prefHeight="625.0" prefWidth="660.0">
              <columns><TableColumn fx:id="processingOrderColumn" prefWidth="75.0" text="Processing order" />
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
                <TableColumn fx:id="stateColumn" prefWidth="75.0" text="State" />
                <TableColumn fx:id="policySourceColumn" prefWidth="75.0" text="Policy source" />
                <TableColumn fx:id="conditionIdColumn" prefWidth="75.0" text="Condition id" />
                <TableColumn fx:id="conditionDataColumn" prefWidth="75.0" text="Condition date" />
                <TableColumn fx:id="profileIdColumn" prefWidth="75.0" text="Profile id" />
                <TableColumn fx:id="profileDataColumn" prefWidth="75.0" text="Profile date" />
              </columns>
            </TableView>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="helpPane" layoutX="160.0" layoutY="40.0" prefHeight="625.0" prefWidth="660.0" visible="false">
         <children>
            <TextArea editable="false" prefHeight="625.0" prefWidth="660.0" text="Welkom bij de NPS CSV tool&#10;&#10;              U kunt de volgende handelingen uitvoeren met deze tool:&#10;               - Een CSV bestand importeren&#10;               - Records wijzigen (toegelaten velden)&#10;               - Records toevoegen (Add record knop)&#10;               - Records verwijderen (Delete record knop)&#10;               - De volgorde aanpassen door het wijwigen van de kolom processing order&#10;               - Exporteren van de gegevens naar een nieuw CSV-bestand&#10;&#10;                 Gebruik de aangegeven knoppen aan de linkerkant om de gewenste acties te voltooien&#10;                Gebruik de knop Exit rechts bovenaan om dit venster te sluiten&#10;&#10;&#10;Welcome to the NPS CSV tool:&#10;&#10;                 U can complete the following actions using this tool:&#10;                - Import a CSV file&#10;                - Alter records (allowed fields)&#10;                - Add records (Add record button)&#10;                - Delete records (Delete button)&#10;                - Alter the order of the records by changing the value in the column processing order&#10;                - Export your data to a new CSV file&#10;&#10;                  Use the assigned buttons on the left side to complete the desired actions&#10;                 Use the Exit button in the top right corner to close this window" wrapText="true" />
         </children></AnchorPane>
   </children>
</AnchorPane>
